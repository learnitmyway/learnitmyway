card-shadow = 0 0 4px 2px rgba(0, 0, 0, 0.2)
not-small = "screen and (min-width: 30em)"
primary = #1976d2;
text-color = rgba(0, 0, 0, 0.84)
text-color-light = rgba(0, 0, 0, 0.6)

.body-wrapper
  background-color: #f4f4f4
  font-family: 'avenir next', avenir, sans-serif

.summary 
  margin-bottom: 1rem
  padding: 2rem
  color: text-color
  overflow: hidden
  &__date
    color: text-color-light
    font-size: .875rem;
  &__title 
    font-size: 1.5rem
  &__excerpt
    color: text-color-light
    line-height: 1.5
    font-family: georgia, times, serif
    font-size: 1rem
    @media not-small
      font-size: 1.25rem

.blog-extras-container
  box-shadow: card-shadow
  background-color: white
  color: text-color
  padding: 1rem
  line-height: 1.5
  margin-top: 0.5rem
  font-family: georgia, times, serif
  font-size: 1rem
  @media not-small
    font-size: 1.25rem
  & a
    color: currentColor
    &:hover
    &:focus 
      opacity: 0.5
      transition: opacity 0.15s ease-in
  &__title
    font-weight: bolder
  &--center
    text-align: center
  
  .subscribe
    &__input
      border-style: solid
      border-width: 1px
      border-color: rgba( 0, 0, 0, .2 )
      padding: .5rem
      margin-bottom: .5rem
      width: 80%
      @media not-small
        font-size: 1.25rem
    &__submit-btn
      display: inline-block
      padding: 0.25rem 0.5rem 0.25rem 0.5rem
      background-color: primary
      border-radius: .25rem
      border-style: solid
      border-width: 1px
      border-color: primary
      color: white
      text-align: center
      &:hover 
        cursor: pointer
      &:hover 
      &:focus 
        opacity: 0.5
        transition: opacity 0.15s ease-in